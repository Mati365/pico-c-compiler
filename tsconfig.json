{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": "./packages",
    "paths": {
      "@compiler/core": ["compiler-core/src/"],
      "@compiler/core/*": ["compiler-core/src/*"],

      "@compiler/lexer": ["compiler-lexer/src/"],
      "@compiler/lexer/*": ["compiler-lexer/src/*"],

      "@compiler/grammar": ["compiler-grammar/src/"],
      "@compiler/grammar/*": ["compiler-grammar/src/*"],

      "@compiler/rpn": ["compiler-rpn/src/"],
      "@compiler/rpn/*": ["compiler-rpn/src/*"],

      "@compiler/x86-assembler": ["compiler-x86-assembler/src/"],
      "@compiler/x86-assembler/*": ["compiler-x86-assembler/src/*"],

      "@compiler/x86-nano-c": ["compiler-x86-nano-c/src/"],
      "@compiler/x86-nano-c/*": ["compiler-x86-nano-c/src/*"],

      "@emulator/x86-cpu": ["emulator-x86-cpu/src/"],
      "@emulator/x86-cpu/*": ["emulator-x86-cpu/src/*"],

      "@ui/context-state": ["ui-context-state/src/"],
      "@ui/context-state/*": ["ui-context-state/src/*"],

      "@ui/webapp": ["ui-webapp/src/"],
      "@ui/webapp/*": ["ui-webapp/src/*"],

      "@client": ["../src/client"],
      "@client/*": ["../src/client/*"],

      "@server": ["../src/server"],
      "@server/*": ["../src/server/*"]
    }
  },
  "exclude": [
    "**/*.test.ts",
    "node_modules/**/*"
  ]
}
